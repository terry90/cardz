<div class="small-user-notif mark-as-read <%= 'unread' if @notif.unread %>" data-url="<%= read_user_notif_path(id: @notif.id) %>">
  <div class="notif-body">
    <div class="notif-title">Profil <%= @notif.get_percent >= 100 ? 'complet' : 'incomplet' %></div>
    <div class="notif-content">
      <p>Votre profil est rempli à <%= @notif.get_percent %>%</p>
      <div class="progress">
        <div class="uk-progress uk-progress-mini uk-progress-success uk-active">
          <div class="uk-progress-bar" style="width: <%= @notif.get_percent %>%;"></div>
        </div>
      </div>
      <%= link_to 'Compléter mon profil', edit_user_path(id: @notif.target.id), class: 'bold' %>
    </div>
  </div>
</div>