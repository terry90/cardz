<h2>Sign up</h2>

<%= semantic_form_for(resource, as: :user, url: user_registration_path(resource)) do |form| %>
    <%= devise_error_messages! %>
    <%= form.inputs do %>
        <%= form.input :email, input_html: { autofocus: true } %>
        <%= form.actions do %>
            <%= form.action :submit, label: 'Sign up' %>
        <% end %>
    <% end %>
<% end %>

<%= render 'devise/shared/links' %>


